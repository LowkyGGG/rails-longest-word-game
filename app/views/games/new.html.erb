<div class="container">
  <h1>New Game</h1>
  <div class="letters">
    <% letters = ('A'..'Z').to_a.sample(10) %>
    <% letters.each do |letter| %>
      <span class="letter"><%= letter %></span>
    <% end %>
  </div>
  <div class="form">
    <%= form_with url: score_path, method: :get do |f| %>
      <div>
        <%= f.label :word, "Enter your word:" %>
        <%= f.text_field :word %>
      </div>
      <%= f.hidden_field :letters, value: letters.join %>
      <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
      <%= f.submit "Submit" %>
    <% end %>
  </div>
</div>
